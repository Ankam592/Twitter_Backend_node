<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

  <title>Document</title>
</head>

<body>
  <% if(!isAuthenticated) { %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <!-- Logo on the left -->
        <a class="btn btn-warning me-5" href="#"><b>Full Stack</b></a>
        <!-- Toggler for mobile view -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Navbar links (buttons) next to the logo -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="btn btn-outline-warning me-2" href="/WeatherApp/">Home</a>
            </li>
          </ul>
          <!-- right side register,login     -->
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="btn btn-outline-warning me-2" href="/WeatherApp/registerPage">Register</a>
            </li>
            <li class="nav-item">
              <a class="btn btn-outline-warning me-2" href="/WeatherApp/loginPage">Login</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <%} else { %>
      <% if(user.role=='admin' ){ %>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="height: 4rem">
          <div class="container-fluid">
            <!-- Logo on the left -->
            <a class="btn btn-warning me-5" href="#"><b>Full Stack</b></a>

            <!-- Toggler for mobile view -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar links (buttons) next to the logo -->
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="btn btn-outline-warning me-2" href="/WeatherApp/">Home</a>
                </li>
                <li class="nav-item">
                  <a class="btn btn-outline-warning me-2" href="/WeatherApp/AllUsers">Profiles</a>
                </li>
                <li class="nav-item">
                  <a class="btn btn-outline-warning me-2" href="/WeatherApp/uploadPage">fileUpload</a>
                </li>
                <li class="nav-item">
                  <a class="btn btn-outline-warning me-2" href="/WeatherApp/filesPage">AllFiles</a>
                </li>
                <li class="nav-item">
                  <a class="btn btn-outline-warning me-2" href="/WeatherApp/dashboardPage">Dashboard</a>
                </li>
              </ul>

              <!-- Push the username/login button to the right using ms-auto -->
              <ul class="navbar-nav ms-auto">
                <li class="nav-item me-2">
                  <a class="btn btn-outline-warning" href="/WeatherApp/userProfile/<%= user.email %>"><i
                      class="bi bi-person"></i>
                    <%= user.email %>(<%=user.role%>)
                  </a>
                </li>
                <li class="nav-item">
                  <a class="btn btn-outline-warning" href="/WeatherApp/logoutUser/">LogOut</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>

        <%} else if(user.role=="editor" ) { %>
          <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
              <!-- Logo on the left -->
              <a class="btn btn-warning me-5" href="#"><b>Full Stack</b></a>

              <!-- Toggler for mobile view -->
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

              <!-- Navbar links (buttons) next to the logo -->
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="btn btn-outline-warning me-2" href="/WeatherApp/">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="btn btn-outline-warning me-2" href="/WeatherApp/AllUsers">MyProfile</a>
                  </li>
                  <li class="nav-item">
                    <a class="btn btn-outline-warning me-2" href="/WeatherApp/uploadPage">fileUpload</a>
                  </li>
                  <!-- <li class="nav-item">
                    <a class="btn btn-outline-warning me-2" href="/WeatherApp/filesPage">MyFiles</a>
                  </li> -->
                  <li class="nav-item">
                    <a class="btn btn-outline-warning me-2" href="/WeatherApp/dashboardPage">Dashboard</a>
                  </li>
                </ul>


                <!-- Push the username/login button to the right using ms-auto -->
                <ul class="navbar-nav ms-auto">
                  <li class="nav-item">
                    <a class="btn btn-outline-warning" href="/WeatherApp/userProfile/<%= user.email %>"><i
                        class="bi bi-person"></i>
                      <%= user.email %>(<%=user.role%>)
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="btn btn-outline-warning" href="/WeatherApp/logoutUser/">LogOut</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>

          <% } else{%>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
              <div class="container-fluid">
                <!-- Logo on the left -->
                <a class="btn btn-warning me-5" href="#"><b>Full Stack</b></a>

                <!-- Toggler for mobile view -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                  aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links (buttons) next to the logo -->
                <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
                    <li class="nav-item">
                      <a class="btn btn-outline-warning me-2" href="/WeatherApp/">Home</a>
                    </li>
                    <li class="nav-item">
                      <a class="btn btn-outline-warning me-2" href="/WeatherApp/userProfile/<%= user.email %>">My
                        Profile</a>
                    </li>
                    <li class="nav-item">
                      <a class="btn btn-outline-warning me-2" href="/WeatherApp/dashboardPage">Dashboard</a>
                    </li>

                  </ul>

                  <!-- Push the username/login button to the right using ms-auto -->
                  <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                      <a class="btn btn-outline-warning" href="/WeatherApp/userProfile/<%= user.email %>"><i
                          class="bi bi-person"></i>
                        <%= user.email %>(<%=user.role%>)
                      </a>
                    </li>
                    <li class="nav-item">
                      <a class="btn btn-outline-warning" href="/WeatherApp/logoutUser/">LogOut</a>
                    </li>
                  </ul>
                </div>
              </div>
            </nav>
            <%} }%>


